<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fatext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listView_connect_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.42" >

    </ListView>
    
    <LinearLayout
		android:id="@+id/control_btns"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="5dip"
		android:layout_marginRight="2dip"
	    android:layout_marginLeft="2dip"
		android:padding="6dp">
			    
		<com.beardedhen.bbutton.BootstrapButton
		    android:id="@+id/btn_connect_main_start"
            android:layout_width="0dip"
			android:layout_height="match_parent"
		    android:layout_weight="1"
            android:text="START"
            bbutton:type="warning"
            bbutton:icon_left="fa-location-arrow"
            android:layout_margin="10dp"
            />
        <com.beardedhen.bbutton.BootstrapButton
            android:id="@+id/btn_connect_main_stop"
            android:layout_width="0dip"
            android:layout_height="match_parent"
		    android:layout_alignParentRight="true"
		    android:layout_weight="1"
            android:text="STOP"
            bbutton:type="danger"
            bbutton:icon_left="fa-pause"
            android:layout_margin="10dp"
            />
        
    </LinearLayout>
    
    <com.beardedhen.bbutton.BootstrapButton
        android:id="@+id/button_start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="More"
            bbutton:type="info"
            bbutton:roundedCorners="true"
            bbutton:icon_left="fa-reply-all"
            android:layout_margin="10dp"
            />
</LinearLayout>

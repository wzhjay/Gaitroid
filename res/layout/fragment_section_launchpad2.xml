<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fatext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	
        <LinearLayout android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
    		android:padding="6dip" >
					    
		    <ListView
		         android:id="@+id/todo_listview"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="20dip"
		         android:layout_marginTop="10dip" />
		    <com.beardedhen.bbutton.BootstrapButton
	        	android:id="@+id/btn_set_todo"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Set Todo Test"
	            bbutton:type="info"
	            bbutton:roundedCorners="true"
	            bbutton:icon_left="fa-reply-all"
	            android:layout_marginTop="15dip"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            />
        </LinearLayout>
</FrameLayout>

<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">false</item>
  		<item name="android:windowFullscreen">true</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <color name="custom_theme_color">#ffffff</color>
	<style name="CustomTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
	    <item name="android:windowBackground">@color/custom_theme_color</item>
	    <item name="android:colorBackground">@color/custom_theme_color</item>
	</style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/button_red_selector</item>
    </style>

</resources>
